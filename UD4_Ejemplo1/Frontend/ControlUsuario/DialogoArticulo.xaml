<mah:MetroWindow x:Class="UD4_Ejemplo1.Frontend.ControlUsuario.DialogoArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UD4_Ejemplo1.Frontend.ControlUsuario"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Name="diagArticulo"
        Loaded="diagArticulo_Loaded"
        mc:Ignorable="d"
        Title="DialogoArticulo" Height="450" Width="800">

    <Grid Background="#1B2D61">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="ALTA ARTÍCULO"
            Foreground="White"
            FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
            Text="Los campos con asteriscos son obligatorios"
            Foreground="White" FontWeight="Bold"
            Margin="5,15,0,15" />

        <TextBox Grid.Row="2" Grid.Column="0"
          mat:HintAssist.Hint="Número de serie"
          Foreground="White" Margin="5,15,0,15"
          x:Name="txtNumSerie" Width="200"/>

        <TextBox Grid.Row="2" Grid.Column="1"
          mat:HintAssist.Hint="Estado"
          Foreground="White" Margin="5,15,0,15"
          x:Name="txtEstado" Width="200"/>

        <DatePicker Grid.Row="3" Grid.Column="0"
          mat:HintAssist.Hint="Fecha de alta"
          x:Name="dpFechaAlta" Width="200" Margin="5,15,0,15"/>

        <ComboBox Grid.Row="3" Grid.Column="1"
          mat:HintAssist.Hint="Usuario alta"
          x:Name="cmbUsuarioAlta" Width="200" Margin="5,15,0,15"
          DisplayMemberPath="Usuarioalta"/>

       <!--  <ComboBox Grid.Row="4" Grid.Column="0"
          mat:HintAssist.Hint="Usuario baja"
          x:Name="cmbUsuarioBaja" Width="200" Margin="5,15,0,15"
          DisplayMemberPath="Usuariobaja"/>
        -->
        
       <!-- <DatePicker Grid.Row="4" Grid.Column="1"
          mat:HintAssist.Hint="Fecha de baja"
          x:Name="dpFechaBaja" Width="200" Margin="5,15,0,15"/>
        -->

        <ComboBox Grid.Row="5" Grid.Column="0"
          mat:HintAssist.Hint="Modelo"
          x:Name="cmbModelo" Width="200" Margin="5,15,0,15"
          DisplayMemberPath="Modelo"/>

        <ComboBox Grid.Row="5" Grid.Column="1"
          mat:HintAssist.Hint="Departamento"
          x:Name="cmbDepartamento" Width="200" Margin="5,15,0,15"
          DisplayMemberPath="Departamento"/>

        <ComboBox Grid.Row="6" Grid.Column="0"
          mat:HintAssist.Hint="Espacio"
          x:Name="cmbEspacio" Width="200" Margin="5,15,0,15"
          DisplayMemberPath="Espacio"/>

        <ComboBox Grid.Row="6" Grid.Column="1"
          mat:HintAssist.Hint="Dentro de"
          x:Name="cmbDentroDe" Width="200" Margin="5,15,0,15"
          DisplayMemberPath="Dentrode"/>

        <TextBox Grid.Row="7" Grid.ColumnSpan="1"
          mat:HintAssist.Hint="Observaciones"
          x:Name="txtObservaciones" Width="200" Margin="5,15,0,15"
          Foreground="White" AcceptsReturn="True" Height="80"/>

        <Grid Grid.Row="8" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Width="100" Height="50"
             Background="Transparent" BorderBrush="LightBlue"
             x:Name="btnCancelarArticulo" Click="btnCancelarArticulo_Click">
                <TextBlock Text="Cancelar" Foreground="LightBlue"/>
            </Button>

            <Button Grid.Column="1" Width="100" Height="50"
             Background="LightBlue" Margin="10,0,0,0"
             x:Name="btnGuardarArticulo" Click="btnGuardarArticulo_Click">
                <TextBlock Text="Guardar" Foreground="#1B2D61"/>
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
